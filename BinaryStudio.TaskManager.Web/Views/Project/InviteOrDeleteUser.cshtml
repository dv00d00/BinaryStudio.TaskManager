@model BinaryStudio.TaskManager.Web.Models.ProjectCollaboratorsViewModel
@{
    ViewBag.Title = "Manage collaborators";
}
<h2 class="well-large">
    Manage collaborators
</h2>
<table class="tabbable">
    <tr>
        <th>
        </th>
        <th>
            User name
        </th>
        <th>
        </th>
    </tr>
    @foreach (var user in Model.Collaborators)
    {
        <tr class="user">
            <td>
                @if (@user.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="80" height="80" src="@Url.Action("GetImage", "Project", new { UserId = user.Id })" />
                }
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                <div class="buttons">
                    <button title="Invite" class="invite btn btn-primary" id=@user.Id>
                        Invite
                    </button>
@*
                    @Html.ActionLink("Invite", "InviteUserInProject", new { receiverId = user.Id, projectId = 1 }, new { @class = "btn" })
                    @Html.ActionLink("Delete", "RemoveUserFromProject", new { receiverId = user.Id, projectId = 1 }, new { @class = "btn" })
*@
                </div>                
            </td>
        </tr>
    }    
</table>
<p>
    @Html.ActionLink("Back to tasks list", "PersonalProject")
</p>
<script type="text/javascript">
    $(document).ready(function () {
        var onError = function () {
            alert("Error while AJAX request");
        };

        $(".invite").click(function () {
            var self = this;
            var onSuccess = function () {              
                $(self).parents(".buttons").html("<div class=\"label\">Just invited</div>");
            };

            var id = $(this).attr('id');
            $.ajax({
                type: "POST",
                url: "/Project/InviteUserInProject/",
                data: { receiverId: id, projectId: 1 },
                dataType: "json",
                traditional: true
            }).success(onSuccess).error(onError);
        });
    });
</script>
