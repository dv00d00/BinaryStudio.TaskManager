@model BinaryStudio.TaskManager.Web.Models.ProjectCollaboratorsViewModel
@{
    ViewBag.Title = "Manage collaborators";
}
<h2 class="well-large">
    Manage collaborators
</h2>

<table class="tabbable">

<table>
    <tr>
        <th>
        </th>
        <th>
            User name
        </th>
        <th>
        </th>
    </tr>

    @foreach (var user in Model.Collaborators)

    {
        <tr>
            <td>
                @if(@user.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="80" height="80" src="@Url.Action("GetImage", "Project", new {UserId = user.Id})" />
                }
            </td>
            <td>
                @user.UserName
            </td>
            <td>
                @Html.ActionLink("Invite", "InviteUserInProject", new { receiverId = user.Id, projectId = 1 }, new { @class = "btn" })
                @Html.ActionLink("Delete", "RemoveUserFromProject", new { receiverId = user.Id, projectId = 1 }, new { @class = "btn" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Back to tasks list", "PersonalProject")
</p>