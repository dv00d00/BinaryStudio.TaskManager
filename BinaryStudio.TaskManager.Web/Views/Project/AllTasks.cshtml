@model IList<BinaryStudio.TaskManager.Web.Models.SingleTaskViewModel>   

@{
    ViewBag.Title = "All tasks in project";
}
<h2 class="well-large">
    All tasks in project
</h2>
<p>
    @Html.ActionLink("Create a new task", "CreateTask", new { userId = -1 }, new { @class = "btn" })
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Priority
        </th>
        <th>
            Created
        </th>
        <th>
            Assigned
        </th>
        <th>
            Finished
        </th>
        <th>
            Closed
        </th>
        <th>
            Creator
        </th>
        <th>
            Assignee name
        </th>
    </tr>
    
    @foreach (var item in Model)
    {
        <tr>
        <td>
            @item.HumanTask.Name
        </td>
        <td>
            @item.HumanTask.Description
        </td>
        <td>
            @item.HumanTask.Priority
        </td>
        <td>
            @String.Format("{0:g}", item.HumanTask.Created)
        </td>
        <td>
            @String.Format("{0:g}", item.HumanTask.Assigned)
        </td>
        <td>
            @String.Format("{0:g}", item.HumanTask.Finished)
        </td>
        <td>
            @String.Format("{0:g}", item.HumanTask.Closed)
        </td>
        <td>
            @item.CreatorName
        </td>
        <td>
            @item.AssigneeName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.HumanTask.Id, projectId = item.HumanTask.ProjectId})<br/>
            @Html.ActionLink("Details", "Details", new { id = item.HumanTask.Id })<br/>
            @Html.ActionLink("Delete", "Delete", new { id = item.HumanTask.Id })
        </td>
    </tr>
    }

</table>