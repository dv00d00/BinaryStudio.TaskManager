@using BinaryStudio.TaskManager.Logic.Domain
@model HumanTask
@{
    ViewBag.Title = "Edit task";
}
<h2 class="well-large">
    Edit task
</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Edit task </legend>
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Created)
        @Html.HiddenFor(model => model.Assigned)
        @Html.HiddenFor(model => model.CreatorId)
        @Html.HiddenFor(model => model.AssigneeId)
        @Html.HiddenFor(model => model.ProjectId)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Priority)
        </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Priority)
        @Html.ValidationMessageFor(model => model.Priority)
    </div>
   
            <div class="editor-label">
                @Html.LabelFor(model => model.Finished)
            </div>
        
    <div class="editor-field">
            <input class="text-box single-line" id="Finished" name="Finished" type="text" value='@(Model.Finished != null ? Model.Finished.Value.ToShortDateString().Replace('.', '-') : "06-09-2011")' />


        @*Html.EditorFor(model => model.Finished)*@
                
            @Html.ValidationMessageFor(model => model.Finished)
        
    </div>
       
        <div class="editor-label">
            @Html.LabelFor(model => model.Closed)
        </div>
        <div class="editor-field">
            
            <input class="text-box single-line" id="Closed" name="Closed" type="text" value='@(Model.Closed != null ? Model.Closed.Value.ToShortDateString().Replace('.', '-') : "06-09-2011")' />

                @*Html.EditorFor(model => model.Closed) *@
        
            @Html.ValidationMessageFor(model => model.Closed)
        </div>
        <p>
            <input type="submit" value="Save changes" class="btn btn-primary" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to all tasks view", "AllTasks", null, new { @class = "btn" })
    <span class="divider-vertical"></span>
    @Html.ActionLink("Back to project dashboard", "Project", new { id = Model.ProjectId }, new { @class = "btn" })
</div>

<script type="text/javascript">
    $(document).ready(function () {


        $('#Finished').datepicker({
            format: 'dd-mm-yyyy'
        });
        $('#Closed').datepicker({
            format: 'dd-mm-yyyy'
        });


    });
</script>
