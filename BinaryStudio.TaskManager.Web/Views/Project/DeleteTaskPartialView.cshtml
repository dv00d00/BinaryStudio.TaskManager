@model BinaryStudio.TaskManager.Web.Models.SingleTaskViewModel
<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h3>Delete task</h3>
    </div>
<div class="modal-body">
    <h3>
        Are you sure you want to delete this task?
        <button title="Yes" class="yes btn btn-success">
            Yes
        </button>
        <button title="No" class="no btn btn-danger" >
            No
        </button>
    </h3>
    <br />
   @* @Html.Partial("TaskDetailsPartial")*@
    @using (Html.BeginForm())
    {
        <br />
        <div>
            <input type="submit" value="Delete" class="delete btn btn-primary" /><br />
        </div>
    }
    <p>
    <a href="@Url.Action("Delete", "Project", new { idTask = @Model.HumanTask.Id, projectId = @Model.HumanTask.ProjectId, viewStyle = @Model.ViewStyle })"></a>
</div>
<div class="modal-footer">
    @if (Model.ViewStyle == true)
    {
        <span class="divider-vertical"></span>
        @Html.ActionLink("Return to project", "MultiuserView", new { projectId = Model.HumanTask.ProjectId, viewStyle = true }, new { @class = "btn" })
    }
    else
    {
        <span class="divider-vertical"></span>
        @Html.ActionLink("Back to project dashboard", "Project", new { id = Model.HumanTask.ProjectId }, new { @class = "btn" })
    }
</div>

<script type="text/javascript">
    $(document).ready(function () {

        $(".delete").prop("disabled", true);

        $(".yes").click(function () {
            $(".delete").prop("disabled", false);
        });

        $(".no").click(function () {
            $(".delete").prop("disabled", true);
        });

    });
</script>