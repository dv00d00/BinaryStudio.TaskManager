@using BinaryStudio.TaskManager.Logic.Domain
@model IList<BinaryStudio.TaskManager.Web.Models.TaskViewModel>

@helper GetValue(HumanTask item, string creatorName)
{
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Description
        </td>
        <td>
            @item.Priority
        </td>
        <td>
            @String.Format("{0:g}", item.Created)
        </td>
        <td>
            @String.Format("{0:g}", item.Finished)
        </td>
        <td>
            @String.Format("{0:g}", item.Closed)
        </td>
        <td>
            @creatorName
        </td>
        <td>
            @this.Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @this.Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @this.Html.ActionLink("Delete", "Delete", new { idTask = item.Id })
        </td>
    </tr>
}



<h2 class="well-large"> @ViewBag.ManagerName, Ваши задачи</h2>

<p>
    @Html.ActionLink("Create New task", "CreateTask",new{managerId =(int) ViewBag.ManagerId})
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Priority
        </th>
        <th>
            Creation Date
        </th>
        <th>
            Finish Date
        </th>
        <th>
            Date of close
        </th>
        <th>
            Task Creator
        </th>
    </tr>

@foreach (var item in Model)
    {
        this.GetValue(item.Task,item.CreatorName);
            @this.GetValue(item.Task,item.CreatorName)
    }

</table>
