<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />   
    <link href="../../Content/Custom.css" rel="stylesheet" type="text/css" />

    <!--Do not remove jquery-1.7.2.* libraries - D&D dependents from their!!!!-->
    <script src="../../Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-1.7.2.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.8.20.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery-ui-1.8.20.min.js" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Task Manager</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    @if(Roles.IsUserInRole("admin"))
                    {
                        <li>@Html.ActionLink("Панель администратора","Index","Admin")</li>
                    }
                    <li>@Html.ActionLink("Список напоминаний","Index","Reminder")</li>                    
                    <li>@Html.ActionLink("Панель сотрудников и заданий", "AllManagersWithTasks", "HumanTasks")</li>                    
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
