@using BinaryStudio.TaskManager.Logic.Domain
@model HumanTask

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>HumanTask</legend>

    <div class="display-label">Name</div>
    <div class="display-field">@Model.Name</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Description</div>

    <div class="display-label">Priority</div>
    <div class="display-field">@Model.Priority</div>

    <div class="display-label">Created</div>
    <div class="display-field">@String.Format("{0:g}", Model.Created)</div>

    <div class="display-label">Assigned</div>
    <div class="display-field">@String.Format("{0:g}", Model.Assigned)</div>

    <div class="display-label">Finished</div>
    <div class="display-field">@String.Format("{0:g}", Model.Finished)</div>

    <div class="display-label">Closed</div>
    <div class="display-field">@String.Format("{0:g}", Model.Closed)</div>

    <div class="display-label">CreatorId</div>
    <div class="display-field">@Model.CreatorId</div>

    <div class="display-label">AssigneeId</div>
    <div class="display-field">@Model.AssigneeId</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}


