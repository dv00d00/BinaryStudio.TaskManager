@using BinaryStudio.TaskManager.Logic.Domain
@model HumanTask

@{
    ViewBag.Title = "Детали";
}

<h2>Детали</h2>

<fieldset>
    <legend>Задание</legend>

    <div class="display-label">
        Название
    </div>
    <div class="display-field">
        @Model.Name
    </div>

    <div class="display-label">
        Описание
    </div>
    <div class="display-field">
        @Model.Description
    </div>

    <div class="display-label">
        Приоритет
    </div>
    <div class="display-field">
        @Model.Priority
    </div>

    <div class="display-label">
        Дата создания
    </div>
    <div class="display-field">
        @String.Format("{0:g}", Model.Created)
    </div>

    <div class="display-label">
        Дата назначения ответственного
    </div>
    <div class="display-field">
        @String.Format("{0:g}", Model.Assigned)
    </div>

    <div class="display-label">
        Дата окончания
    </div>
    <div class="display-field">
        @String.Format("{0:g}", Model.Finished)
    </div>

    <div class="display-label">
        Дата закрытия
    </div>
    <div class="display-field">
        @String.Format("{0:g}", Model.Closed)
    </div>

    <div class="display-label">
        Id создавшего
    </div>
    <div class="display-field">
        @Model.CreatorId
    </div>

    <div class="display-label">
        Id ответственного
    </div>
    <div class="display-field">
        @Model.AssigneeId
    </div>
</fieldset>
<p>
    @Html.ActionLink("Редактировать", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Вернуться к списку всех задач", "AllTasks")
</p>