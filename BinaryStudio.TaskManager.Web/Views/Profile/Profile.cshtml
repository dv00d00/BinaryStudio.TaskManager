@model BinaryStudio.TaskManager.Web.Models.ProfileModel
@{
    ViewBag.Title = "Profile " + @Model.UserName;
}
<div class="page-header">
    <h2>
        Profile</h2>
</div>

@using (Html.BeginForm("ProfileChanges", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    var user = Model;
    if (Model.UserName == User.Identity.Name)
    {
        <div class="row-fluid well">
            <div class="span5">
                <div>
                    <div>
                        <div class="row-fluid">
                            <div class="span4">
                                 @if (user.ImageData == null)
                                 {
                                     <img class="pull-left" src="@Url.Content("~/Content/images/photo.png")" alt="Photo" width="80" height="80"/>
                                 }
                                 else
                                 {
                                     <img width="80" height="80" src="@Url.Action("GetImageInProfile", "Profile", new { UserName = User.Identity.Name })" alt=""/>
                                 }
                            </div>
                            <div >
                                <span class="icon-user"></span> @Model.UserName
                            </div>
                            <div class="email">
                                <span class="icon-envelope"></span> @Model.Email
                            </div>
                            <div class="editor-field">
                                Load your new image:
                                <input type="file" name="Image" />
                                <input class="btn" type="submit" value="Load new photo" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
<div class="row-fluid">
    <div>
        @Html.ActionLink("Your invitations", "Invitations", "Project", null, new { @class = "btn" })
        @if (@Model.InvitationsCount == 0)
        {

        }
        else
        {
            <span style="color: red; font-size: 14pt"> + @Model.InvitationsCount </span>
        }
    </div>
    <div>
        @Html.ActionLink("Change password", "ChangePassword", "Profile", null, new { @class = "btn" })    
    </div>
</div>
