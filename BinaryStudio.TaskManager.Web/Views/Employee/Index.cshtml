@model IEnumerable<BinaryStudio.TaskManager.Logic.Domain.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Tasks
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
			@item.Name
        </td>
        <td>
            @(item.Tasks == null ? "None" : item.Tasks.Count.ToString())
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>


