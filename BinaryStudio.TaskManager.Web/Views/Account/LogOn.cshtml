@model BinaryStudio.TaskManager.Web.Models.LogOnModel
@{
    ViewBag.Title = "Sign In";
}
<h2 class="well-large">
    Sign In</h2>
<p>
    Please, enter your login and password
</p>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "Login failed. Try again")
@using (Html.BeginForm())
{
    <div>
        <fieldset class="container-fluid">
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName, new { @placeholder = "Login" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <p>
                <input type="submit" value="Sign In" class="btn btn-primary" />
                @Html.ActionLink("Sign Up", "RegisterNewUser", "Account", null, new { @class = "btn" })
            </p>
        </fieldset>
    </div>
}
