@model BinaryStudio.TaskManager.Web.Models.ProfileModel
@using (Html.BeginForm("ProfileChanges", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="page-header">
        <h2>Profile</h2>
    </div>
    <div class="row-fluid">
        <div class="span5">
            <div>
                <div>
                    <div class="row-fluid">
                        <div class="span4">
                            <img width="80" height="80" src="@Url.Action("GetImageInProfile", "Profile", new { UserName = User.Identity.Name })" />
                        </div>
                        <div class="span8 primary-info">
                            <span class="name">@User.Identity.Name</span><br/>
                        </div>
                        <div class="editor-label">
                            Image
                        </div>
                        <div class="editor-field">
                            Load your image: <input type="file" name="Image" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span2">
            <a class="btn" href="@Url.Action("Invitations", "Project", null)">Your invitations</a>
        </div>
    </div>
}