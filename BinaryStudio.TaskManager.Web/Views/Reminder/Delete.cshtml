@model BinaryStudio.TaskManager.Logic.Domain.Reminder

@{
    ViewBag.Title = "Delete";
}

<h2 class="well-large">Reminder delete</h2>

<h3>Are you sure you want to delete this reminder?</h3>
<fieldset>
    <legend>Reminder</legend>

    <div class="display-label">User</div>
    <div class="display-field">@(Model.User  == null ? "None" : Model.User.UserName)</div>

    <div class="display-label">Task</div>
    <div class="display-field">@(Model.Task == null ? "None" : Model.Task.Name)</div>

    <div class="display-label">Reminder date</div>
    <div class="display-field">@String.Format("{0:g}", Model.ReminderDate)</div>

    <div class="display-label">Description</div>
    <div class="display-field">@Model.Content</div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to previous page", "MyReminders")
    </p>
}


