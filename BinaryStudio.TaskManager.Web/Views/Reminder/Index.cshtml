@model IEnumerable<BinaryStudio.TaskManager.Logic.Domain.Reminder>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Employee
        </th>
        <th>
            Task
        </th>
        <th>
            ReminderDate
        </th>
        <th>
            Content
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @(item.Employee == null ? "None" : item.Employee.Name)
        </td>
        <td>
            @(item.Task == null ? "None" : item.Task.Name)
        </td>
        <td>
            @String.Format("{0:g}", item.ReminderDate)
        </td>
        <td>
            @item.Content
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>


